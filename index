<footer>
  &copy; 2025 | Powered by GNews | Monetized with Monetag
</footer>

<script>
  const API_KEY = "49e7a24879d0c648baf86bcee2cfa257";
  const MONETAG_LINK = "https://otieu.com/4/9390942?url=";
  const NEWS_CONTAINER = document.getElementById("news-container");

  async function loadNews() {
    const category = document.getElementById("categorySelect").value;
    NEWS_CONTAINER.innerHTML = "<p style='text-align:center;'>‚è≥ Loading...</p>";

    let url = `https://gnews.io/api/v4/top-headlines?lang=en&country=in&token=${API_KEY}`;
    if (category) {
      url += `&topic=${category}`;
    }

    try {
      const res = await fetch(url);
      const data = await res.json();
      NEWS_CONTAINER.innerHTML = '';

      data.articles.forEach(article => {
        const encodedURL = encodeURIComponent(article.url);
        const monetizedLink = `${MONETAG_LINK}${encodedURL}`;
        const card = document.createElement('div');
        card.className = 'news-card';
        card.innerHTML = `
          <img src="${article.image || 'https://via.placeholder.com/400x200'}" />
          <div class="news-content">
            <h2>${article.title}</h2>
            <p>${article.description || ''}</p>
            <a href="${monetizedLink}" target="_blank">üîó Read More</a>
          </div>
        `;
        NEWS_CONTAINER.appendChild(card);
      });

    } catch (err) {
      NEWS_CONTAINER.innerHTML = "<p style='text-align:center;'>‚ö†Ô∏è Error loading news.</p>";
      console.error(err);
    }
  }

  // Fake Google Trends data (live trends API is not public for free use)
  const fakeTrends = [
    "IPL 2025", "Indian Elections", "Google AI", "Stock Market", "New Smartphones",
    "SpaceX Launch", "Petrol Prices", "Crypto Boom", "TikTok Ban", "Job Alerts India"
  ];
  document.getElementById("trendList").innerText = fakeTrends.slice(0, 5).join(" ‚Ä¢ ");

  // Load initial
  loadNews();
</script>

